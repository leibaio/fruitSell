/* pages/tabbar/mine/mine.wxss */
page {
    background-color: #F5F5F5;
  }
  .user-info {
    width: 100%;
    display: inline-flex;
    padding: 25px 0 50px 0;
    border-radius: 0 0 5% 5%;
    background: #667ca5;
    background-image: linear-gradient(#6495ED, #4b7deb85);
    box-shadow: 0 20px 50px 0 rgb(59, 45, 159);
  }
  
  .avatar {
    margin: 0 0 20px 25px;
    width: 85px;
    height: 80px;
    overflow: hidden;
    border-radius: 25%;
    border: 1px solid #7e94bd;
    box-shadow: 0 20px 50px 0 rgb(59, 45, 159);
  }
  
  .nickname {
    font-size: 38rpx;
    display: inline-flex;
    font-weight: bold;
    color: white;
    margin: 30px 0 50px 50px;
    box-shadow: 0 20px 50px 0 rgb(59, 45, 159);
  }
  
  .mine-order{
    margin: -10% 3% 0 3%;
    border-radius: 6px;
  }
  
  .service-order{
    margin: 10% 3% 0 3%;
    border-radius: 6px;
  }

  .grid{
    margin: 2% 3% 0 3%;
    border-radius: 6px;
  }
  
  .cell-title{
    font-size: 28rpx;
    font-weight: 450;
  }
  
  .cell-value{
    font-size: 24rpx;
  }
  
  